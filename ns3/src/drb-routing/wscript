# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('drb-routing', ['internet'])
    module.source = [
        'model/ipv4-drb-routing.cc',
        'helper/ipv4-drb-routing-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('drb-routing')
    module_test.source = [
        'test/drb-routing-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'drb-routing'
    headers.source = [
        'model/ipv4-drb-routing.h',
        'helper/ipv4-drb-routing-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

